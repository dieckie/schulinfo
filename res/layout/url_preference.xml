<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/url_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/url_edit"
        android:layout_alignBottom="@+id/url_edit"
        android:layout_toLeftOf="@+id/url_edit"
        android:layout_toStartOf="@+id/url_edit"
        
        android:text="@string/url_protocol"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/url_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="23dp"
        android:ems="10"
        android:inputType="textUri" />

</RelativeLayout>